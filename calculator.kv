<CalculatorGridLayout>
     id: calculator
     display: entry
     select: select

     GridLayout:
          cols:1
          size: root.width - 200, root.height - 200
          pos: 100, 100

          TextInput:
               id: entry
               multiline:False
               font_size:40

          GridLayout:
               spacing:10
               cols:4

               Button:
                    text:"7"
                    on_press: entry.text += self.text

               Button:
                    text:"8"
                    on_press: entry.text += self.text

               Button:
                    text:"9"
                    on_press: entry.text += self.text

               Button:
                    text:"+"
                    on_press: entry.text += self.text

          GridLayout:
               spacing:10
               cols:4

               Button:
                    text:"4"
                    on_press: entry.text += self.text

               Button:
                    text:"5"
                    on_press: entry.text += self.text

               Button:
                    text:"6"
                    on_press: entry.text += self.text

               Button:
                    text:"-"
                    on_press: entry.text += self.text

          GridLayout:
               spacing:10
               cols:4

               Button:
                    text:"1"
                    on_press: entry.text += self.text

               Button:
                    text:"2"
                    on_press: entry.text += self.text

               Button:
                    text:"3"
                    on_press: entry.text += self.text

               Button:
                    text:"*"
                    on_press: entry.text += self.text

          GridLayout:
               spacing:10
               cols:4

               Button:
                    text:"0"
                    on_press: entry.text += self.text

               Button:
                    text:"="
                    on_press: calculator.calculate(entry.text)

               Button:
                    text:"."
                    on_press: entry.text += self.text

               Button:
                    text:"/"
                    on_press: entry.text += self.text

          GridLayout:
               spacing:20
               cols:1
               
               Button:
                    text:"AC"
                    on_press: entry.text = ''